<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- רקע -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/back9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- כותרת -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="בחר צבעים ללוק שלך"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#0D47A1"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- עליונים -->
    <TextView
        android:id="@+id/tvTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="צבעים לעליונים"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#1565C0"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- GRID עליונים -->
    <GridLayout
        android:id="@+id/layoutTopColors"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- תחתונים -->
    <TextView
        android:id="@+id/tvBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="צבעים לתחתונים"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#1565C0"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutTopColors"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- GRID תחתונים -->
    <GridLayout
        android:id="@+id/layoutBottomColors"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- כפתור -->
    <Button
        android:id="@+id/btnApply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="הצג לוק"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#0D47A1"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>